# Appwrite Configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_appwrite_project_id

# Appwrite API Key (keep this secret and never expose in client-side code)
APPWRITE_API_KEY=your_appwrite_api_key

# Appwrite Collection IDs
NEXT_PUBLIC_APPWRITE_USERS_COLLECTION_ID=your_users_collection_id
NEXT_PUBLIC_APPWRITE_INGREDIENTS_COLLECTION_ID=your_ingredients_collection_id
NEXT_PUBLIC_APPWRITE_CATEGORIES_COLLECTION_ID=your_categories_collection_id
NEXT_PUBLIC_APPWRITE_MEALS_COLLECTION_ID=your_meals_collection_id
NEXT_PUBLIC_APPWRITE_SHOPPING_LISTS_COLLECTION_ID=your_shopping_lists_collection_id
NEXT_PUBLIC_APPWRITE_SHOPPING_LIST_ITEMS_COLLECTION_ID=your_shopping_list_items_collection_id
NEXT_PUBLIC_APPWRITE_MEAL_PLANS_COLLECTION_ID=your_meal_plans_collection_id

# Next.js Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Authentication (if using NextAuth alongside Appwrite)
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# External APIs (if applicable)
RECIPE_API_KEY=your_recipe_api_key
NUTRITION_API_KEY=your_nutrition_api_key

# Email Service (for notifications, if applicable)
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email_username
EMAIL_SERVER_PASSWORD=your_email_password
EMAIL_FROM=noreply@mealhub.com

# Feature Flags
ENABLE_PREMIUM_FEATURES=false

# Logging
LOG_LEVEL=info

# Analytics (if using an analytics service)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Payment Gateway (if implementing premium features)
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# AI Integration (if using AI for meal suggestions)
OPENAI_API_KEY=your_openai_api_key

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://mealhub.com
